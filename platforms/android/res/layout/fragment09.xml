<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rl_fragment09"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/register_background_01"
                android:orientation="vertical"
                tools:context=".Guide.GuideActivity">


    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/include_skip_and_save_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"
            android:src="@drawable/icon_no_word" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_icon"
            android:layout_toRightOf="@+id/iv_icon"
            android:text="相亲名片"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_white_text"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout2"
        android:gravity="center"
        android:text="--  择偶条件  --"
        android:textColor="@color/color_white_text"
        android:textSize="15sp" />

    <TextView
      android:id="@+id/textView9"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/textView7"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="40dp"
      android:gravity="center|start"
      android:paddingStart="40dp"
      android:text="我希望他/她（最多选择9项标签）"
      android:textColor="@color/color_white_text"
      android:textSize="15sp"
      android:paddingLeft="40dp"/>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:background="@drawable/radio_button_selector"
                android:gravity="center"
                android:text="成熟稳重"
                android:textColor="@color/color_white_text"
                android:id="@+id/chkFind01" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:background="@drawable/radio_button_selector"
                android:text="多套住房"
                android:textColor="@color/color_white_text"
                android:layout_marginTop="10dp"
                android:id="@+id/chkFind04" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:background="@drawable/radio_button_selector"
                android:gravity="center"
                android:text="留学经历"
                android:textColor="@color/color_white_text"
                android:layout_marginTop="10dp"
                android:id="@+id/chkFind07" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:background="@drawable/radio_button_selector"
                android:text="留学经历"
                android:textColor="@color/color_white_text"
                android:layout_marginTop="10dp"
                android:id="@+id/chkFind10" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/radio_button_selector"
                android:checked="false"
                android:gravity="center"
                android:text="独生子女"
                android:textColor="@color/color_white_text"
                android:layout_marginTop="10dp"
                android:id="@+id/chkFind13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:background="@drawable/radio_button_selector"
                android:gravity="center"
                android:text="有上进心"
                android:textColor="@color/color_white_text"
                android:id="@+id/chkFind02" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:background="@drawable/radio_button_selector"
                android:gravity="center"
                android:text="留学经历"
                android:textColor="@color/color_white_text"
                android:layout_marginTop="10dp"
                android:id="@+id/chkFind05" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:background="@drawable/radio_button_selector"
                android:text="名校毕业"
                android:textColor="@color/color_white_text"
                android:layout_marginTop="10dp"
                android:id="@+id/chkFind08" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="上市公司"
                android:textColor="@color/color_white_text"
                android:layout_marginTop="10dp"
                android:id="@+id/chkFind11" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:background="@drawable/radio_button_selector"
                android:gravity="center"
                android:text="有私家车"
                android:textColor="@color/color_white_text"
                android:layout_marginTop="10dp"
                android:id="@+id/chkFind14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:background="@drawable/radio_button_selector"
                android:gravity="center"
                android:text="孝顺"
                android:textColor="@color/color_white_text"
                android:id="@+id/chkFind03" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="留学经历"
                android:textColor="@color/color_white_text"
                android:background="@drawable/radio_button_selector"
                android:layout_marginTop="10dp"
                android:id="@+id/chkFind06" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:background="@drawable/radio_button_selector"
                android:text="500强"
                android:textColor="@color/color_white_text"
                android:layout_marginTop="10dp"
                android:id="@+id/chkFind09" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:background="@drawable/radio_button_selector"
                android:gravity="center"
                android:text="会做饭"
                android:textColor="@color/color_white_text"
                android:layout_marginTop="10dp"
                android:id="@+id/chkFind12" />

            <CheckBox
                android:background="@drawable/radio_button_selector"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="党员"
                android:textColor="@color/color_white_text"
                android:layout_marginTop="10dp"
                android:id="@+id/chkFind15" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView6"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="补充说明："
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_white_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:background="@drawable/shape_white"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_background_none"
                android:hint="我还希望他/她...."
                android:gravity="start"
                android:textSize="12sp"
                android:textColor="@color/color_white_text"
                android:id="@+id/edtFindsupplement"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/tab_line_4" />

</RelativeLayout>
