<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rl_fragment08"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/register_background_01"
                android:orientation="vertical"
                tools:context=".Guide.GuideActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"
            android:src="@drawable/icon_no_word" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_icon"
            android:layout_toEndOf="@+id/iv_icon"
            android:text="相亲名片"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_white_text"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/iv_icon"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout2"
        android:gravity="center"
        android:text="-- 个性资料  --"
        android:textColor="@color/color_white_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center|start"
        android:paddingStart="40dp"
        android:text="选择符合子女的标签："
        android:textColor="@color/color_white_text"
        android:textSize="15sp"
        android:paddingLeft="40dp"/>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/chooseChk01"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="成熟稳重"
                android:textColor="@color/color_white_text"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/chooseChk04"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="多套住房"
                android:textColor="@color/color_white_text"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/chooseChk07"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="留学经历"
                android:textColor="@color/color_white_text"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/chooseChk10"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="独生子女"
                android:textColor="@color/color_white_text"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/chooseChk02"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="有上进心"
                android:textColor="@color/color_white_text"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/chooseChk05"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="名校毕业"
                android:textColor="@color/color_white_text"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/chooseChk08"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="上市公司"
                android:textColor="@color/color_white_text"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/chooseChk11"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="有私家车"
                android:textColor="@color/color_white_text"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/chooseChk03"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="文艺"
                android:textColor="@color/color_white_text"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/chooseChk06"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="500强"
                android:textColor="@color/color_white_text"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/chooseChk09"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="会做饭"
                android:textColor="@color/color_white_text"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/chooseChk12"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="党员"
                android:textColor="@color/color_white_text"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView6"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="补充说明："
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_white_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_white"
            android:padding="10dp"
            android:weightSum="1">

            <EditText
                android:id="@+id/edtSetSupplement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.73"
                android:background="@color/color_background_none"
                android:gravity="start"
                android:textColor="@color/color_white_text"
                android:textSize="12sp"
                android:hint="介绍家庭情况/兴趣爱好/特长等"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/tab_line_3" />

    <include
        layout="@layout/include_skip_and_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>