<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rl_fragment04"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/register_background_01"
                android:orientation="vertical"
                tools:context=".Guide.GuideActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="161dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@drawable/icon_1" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back_image" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:text="我要找："

        android:textColor="@color/color_white_text" /><!--
  android:textAppearance="?android:attr/textAppearanceMedium"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="93dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_choose_city"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="60dp"
            android:layout_weight="3"
            android:background="@drawable/shape_white"
            android:gravity="center"
            android:text="上海"
            android:textColor="@color/color_white_text"
            android:textSize="20sp"
            android:layout_marginRight="10dp" />

        <Button
            android:id="@+id/btn_choose_city"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginRight="60dp"
            android:layout_weight="2"

            android:background="@drawable/button_selector"
            android:text="选择城市"
            android:textColor="@color/color_white_text"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>
