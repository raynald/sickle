<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/register_background_01"
                android:orientation="vertical"
                android:id="@+id/rl_fragment06"
                tools:context=".Guide.GuideActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back_image" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/relativeLayout2">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_no_word"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相亲名片"
            android:textSize="25sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="normal"
            android:textColor="@color/color_white_text"
            android:layout_alignBottom="@+id/iv_icon"
            android:layout_toEndOf="@+id/iv_icon" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="--  上传子女头像  --"
        android:gravity="center"
        android:textColor="@color/color_white_text"
        android:textSize="20sp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="本地相册上传"
        android:textColor="@color/color_white_text"
        android:id="@+id/btn_upload_from_albums"
        android:layout_centerVertical="true"
        android:background="@drawable/button_selector"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="拍照上传"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:textColor="@color/color_white_text"
        android:id="@+id/btn_upload_from_camera"
        android:background="@drawable/button_selector"
        android:layout_below="@+id/btn_upload_from_albums"
        android:layout_marginTop="8dp"
         />

    <Button
        android:layout_width="match_parent"
        android:background="@drawable/button_selector"
        android:layout_height="40dp"
        android:text="跳过"
        android:textColor="@color/color_white_text"
        android:id="@+id/btn_skip_upload_image"
        android:layout_below="@+id/btn_upload_from_camera"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="上传头像，关注度提升100倍"
        android:id="@+id/textView4"
        android:textSize="10sp"
        android:textColor="@color/color_white_text"
        android:layout_below="@+id/btn_skip_upload_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/tab_line_1"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />
</RelativeLayout>